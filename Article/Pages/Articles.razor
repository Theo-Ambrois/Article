@page "/Articles"
@using Article.Data
@inject ArticleService articleService

<NavLink class="nav-link" href="AddArticle">
    <span class="oi oi-plus" aria-hidden="true">Add New</span>

</NavLink>

<h1>Article Info</h1>
@if (EmpObj is null)
{
    <p><em>Loading... !</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Disponible</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in EmpObj)
            {
                <tr>
                    <td>@emp.Id</td>
                    <td>@emp.Nom</td>
                    <td>@emp.Description</td>
                    <td>@emp.Prix</td>
                    <td>@emp.Disponible</td>
                    <td>
                        <a class="nav-link" href="EditArticle/@emp.Id">
                            <span class="oi oi-pencil" aria-hidden="true">Edit</span>
                        </a>
                        <a class="nav-link" href="Delete/@emp.Id">
                            <span class="oi oi-trash" aria-hidden="true">Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


@code {
    List<Article> EmpObj;
    protected override async Task OnInitializedAsync()
    {
        EmpObj = await Task.Run(() => articleService.GetAllArticlesAsync());
    }
}